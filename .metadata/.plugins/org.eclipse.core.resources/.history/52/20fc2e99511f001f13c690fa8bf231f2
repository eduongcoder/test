package com.example.Controller;

import org.modelmapper.ModelMapper;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.example.Entity.OrderItem;
import com.example.Entity.OrderItemDTO;
import com.example.From.OrderitemForm;
import com.example.Service.IOrderItemService;

@RequestMapping("/api/ordersitem")
@RestController
public class OrderItemController {
	@Autowired
	private ModelMapper modelMapper;
	
	@Autowired
	private IOrderItemService service;
	
	@PutMapping(value = "/update/{id}")
	public OrderItemDTO updateOrderItemQuantity(@PathVariable(name = "id")int id,@RequestParam int quantity) {
		OrderItem orderItem=service.findbyID(id);
		System.out.println(modelMapper.map(orderItem, OrderItemDTO.class));
		form.setOrder_items_id(id);
		form.setProductVersion(orderItem.getProductVersion().getProductVersion_id());
		form.setOrders(orderItem.getOrders().getOrders_id());
		form.setCreated_at(orderItem.getCreatedAt());
		System.out.println(form);
		orderItem= service.updateOrderItem(form);
		
		return modelMapper.map(orderItem, OrderItemDTO.class);
	}
}
